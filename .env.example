APP_SALT=seu_salt_seguro_aqui
APP_MODE=free # 'saas' ou 'free'
PORT=8080
BASE_URL=http://localhost:8080
DEFAULT_EXPIRATION_DAYS=7
STORAGE_PATH=./storage

APP_ENV=development
DATABASE_URL=./crom_vision.db
CORS_ORIGINS=*
COOLDOWN_MINUTES=5

# Limite de envios gratuitos por IP (0 = ilimitado)
FREE_UPLOADS_IP_LIMIT=5

# Gateways e Notificadores
MP_ACCESS_TOKEN=seu_token_mercado_pago_aqui

# SMTP GMAIL
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua_senha_de_app_aqui

# Rastreamento Geográfico (true/false)
GEO_TRACKING_ENABLED=true

# GeoIP Local (MaxMind GeoLite2)
# Baixe de: https://dev.maxmind.com/geoip/geolite2-free-geolocation-data
GEOIP_DB_PATH=./GeoLite2-City.mmdb

# Retenção máxima de logs de acesso (em dias)
LOG_RETENTION_DAYS=90

# Origens permitidas para envio de formulários (separar por vírgula)
# Use * para aceitar qualquer origem (não recomendado em produção)
# Ex: https://meusite.com,https://outro-site.com.br
ALLOWED_FORM_ORIGINS=*
